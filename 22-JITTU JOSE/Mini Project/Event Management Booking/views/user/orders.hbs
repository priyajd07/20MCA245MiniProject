<section>
    <div class="container">
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">Booking Submited</th>
                    <th scope="col">Date of Event</th>
                    <th scope="col">Event Time</th>
                    <th scope="col">Event Name</th>
                    <th scope="col">No. of guests</th>

                    <th >Address</th>
                    <th >Pincode</th>
                    <th >Mobile</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Payment</th>
                    <th>Status</th>

                </tr>
            </thead>
            <tbody>
                {{#each orders}}
                <tr>
                    
                    
                    <td>{{this.date}}</td>
                    <td>{{this.deliveryDetails.eventdate}}</td>
                    <td>{{this.deliveryDetails.eventtime}}</td>
                    <td>{{this.deliveryDetails.eventname}}</td>
                    <td>{{this.deliveryDetails.noguests}}</td>
                    <td>{{this.deliveryDetails.address}}</td>
                    <td>{{this.deliveryDetails.pincode}}</td>
                    <td>{{this.deliveryDetails.mobile}}</td>
                    <td>{{this.totalAmount}}</td>
                    <td>{{this.paymentMethod}}</td>
                    <td>{{this.status}}</td>

                    <td>
                        <a href="/view-order-products/{{this._id}}" class="btn btn-primary">View Items Selected</a>
                    </td>

                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>