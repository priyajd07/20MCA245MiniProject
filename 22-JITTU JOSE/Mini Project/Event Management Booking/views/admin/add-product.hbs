<section>
    <div class="container mt-4">
        <div class="row">

            <div class="col-md-6">
                <h2 class="text-center">Add Product</h2>
                <form action="/admin/add-product" method="post" enctype="multipart/form-data">
                    <label for="">Name</label>
                    <input type="text" name="Name" class="form-control" required>

                     <label for="">Category</label>
                    <input type="text" name="Category" list="listcat" class="form-control" required>
                    <datalist id="listcat">
                         <option value="Stages"></option>
                         <option value="Food Menu"></option>
                         <option value="Cultural Program"></option>
                         <option value="Anchor"></option>
                         <option value="Decoration"></option>
                         <option value="Wedding Car"></option>
                         <option value="Vehicles"></option>
                         <option value="Others"></option>
                         
                     </datalist>

                     <label for="">Price</label>
                    <input type="number" name="Price" class="form-control" required>
                     
                     <label for="">Description</label>
                    <input type="text"  name="Description" class="form-control">
                     
                     <label for="">Image</label>
                    <input type="file"  class="form-control" name="Image" required>
                    
                    <button type="submit" class="btn btn-success mt-4">Submit</button>

                </form>
            </div>
        </div>
    </div>
</section>